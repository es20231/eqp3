@startuml
'!theme toy
'skinparam actorStyle hollow 
skin rose
skinparam BackgroundColor Wheat

:User:
User -left-> (Register) 
User -> (Login)
(Login) -> (Logout)

Rectangle  {
(Dashboard)
(Dashboard) .> (upload image)
(Dashboard) .down.> (remove image)
(Dashboard) .down.> (post image)
(post image) . (write description)
}

(Login) --> (Dashboard)

Rectangle {
(Profile)
'(Profile) .> (change description)
(Profile) .down.> (change profile picture)
(Profile) .down.> (change name)
(Profile) .> (change password)
}

(Login) --> (Profile) 

Rectangle {
(UserTimeline) .down.> (select user post)
(UserTimeline) .> (change description)
(select user post) .down.> (remove post)
(select user post) .down.> (Select comment)
(Select comment) .> (remove comment)
(select user post) .> (change post description)
}

(Login) --> (UserTimeline)

Rectangle {
(list users)
(list users) .down.> (select user)
(search user) .down.> (select user)
}

(list users) .> (search user)
(Login) --> (list users)

Rectangle {
(timeline)
(timeline) .down.> (select post) 
(select post) .down.> (comment)
(select post) .down.> (like)
(select post) .down.> (select comment)
(select comment) .down.> (like)
}

(select user) -down-> timeline

@enduml

